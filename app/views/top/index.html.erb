<% if current_member.present? %>
  <h2><%= menu_link_to "Hello #{mr_or_ms?}#{current_member.name}", :account %></h2>
<% end %>

<% @articles.each do |article| %>
  <h2><%= article.title %></h2>
  
  <p>
    <!--turncateはヘルパーメゾットで第二引数に指定された文字を超えたら...を加えて返す-->
    <%= truncate article.body, length: 80 %> 
    <%= link_to "More read", article %>
  </p>
<% end %>